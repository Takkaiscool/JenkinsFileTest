pipeline {
    agent any
    parameters {
        string(name: 'SUITENAME', defaultValue: 'Hello', description: 'How should I greet the world?')
    }
    /* triggers{
        //cron("*//* 1 * * * *")
    } */
tools {
        maven 'maven'
    }
    stages {
        stage('Build') {
            steps {
                echo "Running ${env.BUILD_ID} on ${env.JENKINS_URL}"
                echo 'Building..'
            }
        }
        stage('Test') {
            steps {
               //maven(maven : 'maven') {
                     sh "mvn clean test"
                 //  } //
                echo 'Testing..'
                echo "${SUITENAME}"
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
                bat '''echo in deploy to execute the scripts
                       echo again something else'''+ "${SUITENAME}"
            }
        }
    }
    post {
             always {
                    cucumber buildStatus: 'ALWAYS',
//                             failedFeaturesNumber: 1,
//                             failedScenariosNumber: 1,
//                             skippedStepsNumber: 1,
//                             failedStepsNumber: 1,
                            classifications: [
                                    [key: 'Commit', value: 'test'],
                                    [key: 'Submitter', value: 'Arun']
                            ],
                            reportTitle: 'My report',
                            fileIncludePattern: '**/*cucumber-report.json',
                            sortingMethod: 'ALPHABETICAL',
                            trendsLimit: 100
                }
            failure {
               echo "failure"
            }
        }
}