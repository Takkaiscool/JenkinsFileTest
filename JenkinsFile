pipeline {
    agent any
    parameters {
        string(name: 'SUITENAME', defaultValue: 'Hello', description: 'How should I greet the world?')
    }
    triggers{
        cron("*/1 * * * *")
    }

    stages {
        stage('Build') {
            steps {
                echo "Running ${env.BUILD_ID} on ${env.JENKINS_URL}"
                echo 'Building..'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
                echo "${SUITENAME}"
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
                bat([script: 'echo in deploy to execute the scripts',script:'echo again test'])
            }
        }
    }
    post {
            always {
                echo "Post Method"
            }
            failure {
               echo "failure"
            }
        }
}